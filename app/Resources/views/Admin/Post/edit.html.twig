{% extends 'base.html.twig' %}
{% form_theme formView 'Templates/Form/formLayout.html.twig' %}

{% block title %}- Pannel Administratif{% endblock %}

{% block body %}
    <div class="container">

        <div class="post-content">
            {% if post is defined %}
                <h2>{{ post.title }}</h2>
            {% else %}
                <h2>Add Post :</h2>
            {% endif %}

            <hr class="bg-info">

            {{ form_start(formView) }}
            <div class="p-3">

                <div>
                    {{ form_label(formView.title) }}
                    {{ form_widget(formView.title) }}
                </div>

                <div class="mt-3">
                    {{ form_label(formView.description) }}
                    {{ form_widget(formView.description) }}
                </div>

                <div class="mt-3">
                    {{ form_label(formView.active) }}
                    {{ form_widget(formView.active) }}
                </div>

                <div class="mt-5 text-center">
                    {{ form_widget(formView.categories) }}
                </div>
            </div>

            <hr class="bg-info">

            <div class="text-center mt-5">
                {% if post is defined %}
                    <button type="submit" class="btn btn-primary">Valider</button>
                {% else %}
                    <button type="submit" class="btn btn-primary">Cr√©er</button>
                {% endif %}
            </div>

            {{ form_widget(formView._token) }}
            {{ form_end(formView, {'render_rest': false}) }}
        </div>

        {% for error in errors %}
            <div class="alert alert-danger mt-2">
                {{ error }}
            </div>
        {% endfor %}

    </div>
{% endblock %}